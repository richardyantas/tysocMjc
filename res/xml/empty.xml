<mujoco model="planar walker">
  <include file="visual.xml"/>
  <include file="skybox.xml"/>
  <include file="materials.xml"/>

  <option timestep="0.0025"/>

  <statistic extent="2" center="0 0 1"/>

  <default>
    <!--<joint damping=".1" armature="0.01" limited="true" solimplimit="0 .99 .01"/>-->
    <geom contype="1" conaffinity="0" friction=".7 .1 .1"/>
    <site size="0.01"/>
    <default class="walker">
      <geom material="self" type="capsule"/>
      <joint axis="0 -1 0"/>
    </default>
  </default>

  <worldbody>
    <!-- <geom name="floor" type="plane" conaffinity="1" pos="0 0 0" size="2.5 1.25 .2" material="grid" zaxis="0 0 1"/> -->
    <body name="torso" pos="2 0 7" childclass="walker">
      <light name="light" pos="0 0 2" mode="trackcom"/>
      <camera name="side" pos="0 -2 .7" euler="60 0 0" mode="trackcom"/>
      <camera name="back" pos="-2 0 .5" xyaxes="0 -1 0 1 0 3" mode="trackcom"/>
      <joint name="rootz" axis="0 0 1" type="slide" limited="false" armature="0" damping="0" solimplimit="0 .99 .01"/>
      <joint name="rootx" axis="1 0 0" type="slide" limited="false" armature="0" damping="0" solimplimit="0 .99 .01"/>
      <joint name="rooty" axis="0 1 0" type="hinge" limited="false" armature="0" damping="0" solimplimit="0 .99 .01"/>
      <geom name="torso" size="0.07 0.3"/>
      <body name="right_thigh" pos="0 -.05 -0.3">
        <joint name="right_hip" range="-20 100" damping=".1" armature="0.01" limited="true" solimplimit="0 .99 .01"/>
        <geom name="right_thigh" pos="0 0 -0.225" size="0.05 0.225"/>
        <body name="right_leg" pos="0 0 -0.7">
          <joint name="right_knee" pos="0 0 0.25" range="-150 0" damping=".1" armature="0.01" limited="true" solimplimit="0 .99 .01"/>
          <geom name="right_leg" size="0.04 0.25"/>
          <body name="right_foot" pos="0.06 0 -0.25">
            <joint name="right_ankle" pos="-0.06 0 0" range="-45 45" damping=".1" armature="0.01" limited="true" solimplimit="0 .99 .01"/>
            <geom name="right_foot" zaxis="1 0 0" size="0.05 0.1"/>
          </body>
        </body>
      </body>
      <body name="left_thigh" pos="0 .05 -0.3" >
        <joint name="left_hip" range="-20 100" damping=".1" armature="0.01" limited="true" solimplimit="0 .99 .01"/>
        <geom name="left_thigh" pos="0 0 -0.225" size="0.05 0.225"/>
        <body name="left_leg" pos="0 0 -0.7">
          <joint name="left_knee" pos="0 0 0.25" range="-150 0" damping=".1" armature="0.01" limited="true" solimplimit="0 .99 .01"/>
          <geom name="left_leg" size="0.04 0.25"/>
          <body name="left_foot" pos="0.06 0 -0.25">
            <joint name="left_ankle" pos="-0.06 0 0" range="-45 45" damping=".1" armature="0.01" limited="true" solimplimit="0 .99 .01"/>
            <geom name="left_foot" zaxis="1 0 0" size="0.05 0.1"/>
          </body>
        </body>
      </body>
    </body>
    <body pos="0.000000 0.000000 1.500000" quat="0.000000 0.000000 0.000000 1.000000" name="base">
        <geom mass="0.000000" fromto="0.000000 -0.100000 0.000000 0.000000 0.100000 0.000000" size="0.025000" material="decoration" name="base" type="cylinder"/>
        <body pos="0.000000 0.000000 0.000000" quat="0.000000 0.000000 0.000000 1.000000" name="link_0">
            <geom mass="0.010000" fromto="0.000000 0.000000 0.000000 0.000000 0.000000 -0.500000" size="0.020000" material="self" name="link_0" type="capsule"/>
            <joint damping="0.100000" axis="0.000000 1.000000 0.000000" name="joint_0" type="hinge"/>
            <body pos="0.000000 0.000000 -0.500000" quat="0.000000 0.000000 0.000000 1.000000" name="link_1">
                <geom mass="0.010000" fromto="0.000000 0.000000 0.000000 0.000000 0.000000 -0.500000" size="0.020000" material="self" name="link_1" type="capsule"/>
                <joint damping="0.100000" axis="0.000000 1.000000 0.000000" name="joint_1" type="hinge"/>
                <geom mass="1.000000" pos="0.000000 0.000000 -0.500000" quat="0.000000 0.000000 0.000000 1.000000" size="0.050000" name="endmass" type="sphere"/>
            </body>
        </body>
    </body>
  </worldbody>

  <sensor>
    <subtreelinvel name="torso_subtreelinvel" body="torso"/>
  </sensor>

  <actuator>
    <motor name="right_hip" joint="right_hip" gear="100" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="right_knee" joint="right_knee" gear="50" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="right_ankle" joint="right_ankle" gear="20" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="left_hip" joint="left_hip" gear="100" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="left_knee" joint="left_knee" gear="50" ctrlrange="-1 1" ctrllimited="true"/>
    <motor name="left_ankle" joint="left_ankle" gear="20" ctrlrange="-1 1" ctrllimited="true"/>
  </actuator>
</mujoco>
